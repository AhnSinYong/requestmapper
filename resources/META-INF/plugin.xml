    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="FindRequestMapping" class="com.viartemev.requestmapper.FindRequestMappingAction"
                text="Some name of action" description="Some description of action">
            <add-to-group group-id="GoToCodeGroup" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift M"/>
        </action>
    </actions>

</idea-plugin>